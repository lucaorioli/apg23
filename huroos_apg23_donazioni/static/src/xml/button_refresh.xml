<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- Template per aggiungere il pulsante alla ListView -->
    <t t-name="donazioni_list_buttons" t-inherit="web.ListView.Buttons">
        <xpath expr="//div[contains(@class, 'o_list_buttons')]" position="inside">
            <button type="button" class="btn btn-primary mx-1" t-on-click="UpdateRecord">
                <i class="fa fa-refresh" aria-hidden="true"></i> <!-- Icona di refresh -->
                CALCOLA DONAZIONI
            </button>
        </xpath>
    </t>
</templates>
